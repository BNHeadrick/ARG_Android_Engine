	<task name="minigame-find_suspicious_note">
		<postconditions>
			<operator>
				<remove-axioms>
					<axiom name="at" ignore-params="true" />
				</remove-axioms>
				<add-axioms>
					<axiom name="at">
						<param>suspicious_note</param>
					</axiom>
					<axiom name="hilters_note" />
				</add-axioms>
			</operator>
